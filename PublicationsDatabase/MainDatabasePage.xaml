<Page x:Class="PublicationsDatabase.MainDatabasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PublicationsDatabase"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="Выбор действия">

    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Center" >
            <Button x:Name="ButtonAllPublications" Content="Вывести список всех публикаций" MinWidth="100" Margin="0,0,0,0"  Width="190" Click="ButtonAllPublications_Click"/>
            <Button x:Name="ButtonAddPublication" Content="Добавить новую публикацию" MinWidth="100" Margin="10,0,0,0" Width="190" Click="ButtonAddPublication_Click"/>
        </StackPanel>


        <TextBlock FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" TextDecorations="{x:Null}" TextAlignment="Center"><Run Text="Добро пожаловать"/><LineBreak/><Run Text="в информационно-аналитическую систему"/><LineBreak/><Run Text="учета научных публикаций"/></TextBlock>

    </Grid>
</Page>
